<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamschwarz.pwsafe" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="teamschwarz.pwsafe.SplashScreen"
            android:label="PWSafe" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="teamschwarz.pwsafe.MainActivity"
            android:label="PWSafe" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="teamschwarz.pwsafe.PasswordlistActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamschwarz.pwsafe.MainActivity" />
        </activity>
        <activity
            android:name="teamschwarz.pwsafe.NewPasswordActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamschwarz.pwsafe.PasswordlistActivity" />
        </activity>
        <activity
            android:name="teamschwarz.pwsafe.SettingsActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamschwarz.pwsafe.PasswordlistActivity" />
        </activity>
        <activity
            android:name=".NewMPwActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamschwarz.pwsafe.SettingsActivity" />
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest>