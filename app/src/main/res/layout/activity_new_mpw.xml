<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="teamschwarz.pwsafe.activities.NewMPwActivity">

    <TextView
        android:id="@+id/textViewNewMPWTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/newMPWTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewNewMPW1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/newMPW"
        android:layout_below="@id/textViewNewMPWTitle"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextNew1"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNewMPW1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textViewNewMPW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/newMPWRepeat"
        android:layout_marginTop="50dp"
        android:layout_below="@id/editTextNew1"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextNew2"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNewMPW2"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:enabled="false"
        android:layout_marginTop="65dp"
        android:layout_below="@id/editTextNew2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
